
<div class=" col-md-6 col-md-offset-3">

    <div class="starter-template">
         <h3><%=foundUser.name%></h3> 
         <img class="photo-size" src="<%=foundUser.photo%>">
         
         <br>
         <br>

        <% if (currentUser) {%>
    
        <%} else {%>
         <input type="hidden" id="user_id" value="<%=foundUser._id%>">
         <%if(follower){%>
            <p><button class="btn btn-primary" id="unfollow">following</button></p>
         <%} else{ %>
            <button class="btn btn-default" id="follow">follow</button></p>
         <%}%>
        <%}%>
    </div>

    <ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#home">Tweet</a></li>
    <li><a data-toggle="tab" href="#menu1">following</a></li>
    <li><a data-toggle="tab" href="#menu2">followers</a></li>
  </ul>
  
  <div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        <%tweets.forEach(tweet =>{%>
            <div class="media">
                <div class="media-left">
                    <a href="/user/<%=tweet.owner._id%>"><img class="media-object"  src="<%=tweet.owner.photo%>"  alt=""></a>
                </div>
                    <div class="media-body yes">
                        <h4 class="media-heading"><%=tweet.owner.name%></h4>
                        <p><%=tweet.content%></p>
                    </div>
                </div>
        <%})%>
    </div>
    <div id="menu1" class="tab-pane fade">
        <%foundUser.following.forEach(userFollowing=>{%>

            <div class="media">
                <div class="media-left">
                    <a href="/user/<%=userFollowing._id%>"><img class="media-object"  src="<%=userFollowing.photo%>" 
                         alt=""></a>
                </div>
                    <div class="media-body yes">
                        <h4 class="media-heading"><%=userFollowing.name%></h4>
                        
                    </div>
                </div>
        <%})%>
    </div>
    <div id="menu2" class="tab-pane fade">
        <%foundUser.followers.forEach(userFollower=>{%>

            <div class="media">
                <div class="media-left">
                    <a href="/user/<%=userFollower._id%>"><img class="media-object"  src="<%=userFollower.photo%>"  
                        alt=""></a>
                </div>
                    <div class="media-body yes">
                        <h4 class="media-heading"><%=userFollower.name%></h4>
                        
                    </div>
                </div>
        <%})%>
    </div>
  </div>

</div>
 